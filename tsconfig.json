{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./",
    "outDir": "bundle",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@Redux/*": ["src/javascripts/redux/*"],
      "@Component/*": ["src/javascripts/components/*"],
      "@Global/*": ["src/javascripts/global/*"],
      "@Hook/*": ["src/javascripts/hooks/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
